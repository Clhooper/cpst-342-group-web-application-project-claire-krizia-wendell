            }

            #genreform{
               
               background-color: #79A293;
               cursor: pointer;
               display: none;
               position: absolute;
               right: 0; 
               min-width: 160px;
               z-index: 1;
            }

            #genreform form input [type=radio]{
                 
                cursor: pointer;
                display: block;
                font-family: BigCaslon;
            }

            .genre{
               border: 2px solid #1F2224; 
               margin-top: 5px;
               padding-top: 10px; 
               padding-bottom: 10px;
               padding-left: 20px;
