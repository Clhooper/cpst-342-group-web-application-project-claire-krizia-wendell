            .search{
                border: 2px solid red;
                background-color: #8DB8A8;
                grid-area: search;
                height: 650px;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
            }

            input[type=search]{
                border: 2px solid #FCEDD4;
                background-color: #FCEDD4;
